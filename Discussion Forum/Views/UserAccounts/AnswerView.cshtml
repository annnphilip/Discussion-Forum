@model IEnumerable<Discussion_Forum.Models.Answer>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Answers";
}

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#"> Discussion Forum</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="UserAccounts" asp-action="Home">
                        Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Questions" asp-action="Create">Add Questions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="UserAccounts" asp-action="PostedQuest" asp-route-id="@HttpContextAccessor.HttpContext.Session.GetString("userID")">Posted Questions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">  @HttpContextAccessor.HttpContext.Session.GetString("userName")</a>
                    @{Console.WriteLine(HttpContextAccessor.HttpContext.Session.GetString("userName"));}

                </li>
            </ul>
        </div>
    </div>
</nav>
@*@Html.DisplayFor(Model.ToArrayQuestion.Questions.Trim())*@
<h1>Answers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answers)
            </th>
            <th>
                Answered Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                                <td>
                        @Html.DisplayFor(modelItem => item.Question.Questions)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAccount.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnsDate)
                </td>
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.AnswerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AnswerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AnswerId">Delete</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>
